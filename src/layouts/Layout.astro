---
interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
}

const { 
  title = "MailFloss - Keep Your Email List Clean & Healthy",
  description = "Improve email deliverability and protect your sender reputation with MailFloss. Our professional email verification service helps you maintain a clean email list, reduce bounce rates, and optimize your email marketing ROI.",
  ogImage = "https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/mailFloss.png",
  canonicalURL = Astro.url.href
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/mailFloss.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Additional SEO Tags -->
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="email verification, email list cleaning, email deliverability, bounce rate reduction, email marketing, sender reputation, email validation, email list management" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-primary-50 text-primary-900 font-sans">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  html {
    font-family: var(--font-sans);
    scroll-behavior: smooth;
  }
</style>
