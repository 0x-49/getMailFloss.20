---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "MailFloss - Keep Your Email List Clean & Healthy",
  description = "Professional email verification service to improve deliverability and protect your sender reputation"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/mailFloss.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-primary-50 text-primary-900 font-sans">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  html {
    font-family: var(--font-sans);
    scroll-behavior: smooth;
  }
</style>
